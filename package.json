{
  "name": "fidel-challenge",
  "version": "1.0.0",
  "description": "Serverless Offers API built with NestJS, AWS Lambda, and DynamoDB",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
