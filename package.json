  },
  "homepage": "https://github.com/bentovsky/fidel-challenge#readme",
  "devDependencies": {
    "@nestjs/cli": "^11.0.12",
    "@nestjs/schematics": "^11.0.9",
    "@types/aws-lambda": "^8.10.145",
    "@types/node": "^24.10.1",
    "serverless": "^3.39.0",
    "serverless-offline": "^14.4.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.940.0",
